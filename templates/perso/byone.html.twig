    <form class="col-md-10 col-lg-8 m-auto" action="{{ path('result') }}" method="post">

        <ul class="list-group">

            {% for question in questions %}
            <li class="list-group-item">
                <p class="text-primary">{{ loop.index }}. {{ question.intitule }}</p> 
                
