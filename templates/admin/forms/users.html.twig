{% extends 'admin/index.html.twig' %}


{% block body %}
{{ parent() }}

<div class="row mt-4">
<div class="col-md-10 row m-auto">
    <div class="jumbotron col-md-4">
        <h2>Ajouter un nouvel utilisateur</h2>

        {{ form_start(form) }}

            <div class="form-group">
                {{ form_row(form.pseudo, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.creer, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        {{ form_end(form) }}

    </div>

    <div class="col-md-8">
        <h2>Utilisateurs enregistr√©s</h2>
        <ul class="list-group">
            {% for user in users %}
            <li class="list-group-item">{{ loop.index }}. {{ user.pseudo }}</li>
            {% endfor %}
        </ul>
    <div>
</div>
</div>


{% endblock %}
