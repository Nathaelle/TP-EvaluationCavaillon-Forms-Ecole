{% extends 'admin/index.html.twig' %}


{% block body %}
{{ parent() }}

<div class="row mt-4">
<div class="col-md-10 row m-auto">
    <div class="jumbotron col-md-4">

        <h2>Créer un nouveau questionnaire</h2>

        {{ form_start(form) }}

            {{ form_row(form.thematique, {'attr': {'class': 'form-control'}}) }}
            <div class="form-group">
                {{ form_row(form.titre, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.creer, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        {{ form_end(form) }}

        <hr>

        <h2>Ajouter une nouvelle thématique</h2>

        <div class="form-group">
            {{ form_start(themeForm) }}
                <div class="form-group">
                    {{ form_row(themeForm.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(themeForm.creer, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            {{ form_end(themeForm) }}
        </div>

    </div>

    <div class="col-md-8">
        <ul class="list-group">
            {% for thematique in thematiques %}
            <li class="list-group-item">{{ thematique.nom }}
                <ul class="list-group">
                    {% for questionnaire in thematique.questionnaires %}
                    <li><a href="{{ path('admin_questions', {'id': questionnaire.id})}}">{{ questionnaire.titre }}</a> {{ questionnaire.questions | length }} question(s)</li>
                    {% endfor %}
                </ul>
            </li>
            {% endfor %}
        </ul>
    <div>
</div>
</div>
</div>


{% endblock %}